{
  "name": "notion-builds",
  "version": "1.0.0",
  "description": "Programmatically create Notion databases and scaffold pages for templates",
  "type": "module",
  "workspaces": [
    "packages/*",
    "templates/*"
  ],
  "scripts": {
    "build:night-desk": "tsx templates/night-desk/create.ts",
    "seed:night-desk": "tsx scripts/seed-night-desk.ts",
    "validate:night-desk": "tsx scripts/validate-night-desk.ts",
    "review:cap": "tsx scripts/review-cap.ts --apply",
    "dedupe:night-desk": "tsx scripts/dedupe-night-desk.ts",
    "clear:demo": "tsx scripts/clear-demo.ts",
    "docs:pdf": "md-to-pdf docs/quick-start.md && md-to-pdf docs/neuro-guide.md",
    "dev": "tsx --watch"
  },
  "dependencies": {
    "@notionhq/client": "^2.2.15",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "md-to-pdf": "^5.2.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
